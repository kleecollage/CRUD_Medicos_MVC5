
@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header text-white bg-dark">
                <h3 class="card-title">Nuevo Registro</h3>
            </div>
            <div class="card-body text-white bg-secondary mb-3">
                <form action="@Url.Action("Registrar", "Medico")" method="post">
                    <div class="form-group">
                        <label>Nombre</label>
                        <input type="text" class="form-control" name="Nombre" placeholder="Juanito Banana" />
                    </div>
                    <div class="form-group">
                        <label>Apellido Paterno</label>
                        <input type="text" class="form-control" name="ApellidoPaterno" placeholder="Juanito Banana" />
                    </div>
                    <div class="form-group">
                        <label>Apellido Materno</label>
                        <input type="text" class="form-control" name="ApellidoMaterno" placeholder="Hernandez Lopez" />
                    </div>
                    <div class="form-group">
                        <label>Cedula Profesional</label>
                        <input type="text" class="form-control" name="CedulaProfesional" placeholder="123456789" />
                    </div>
                    <div class="form-group">
                        <label>Especialidad ID</label>
                        <input type="text"" class="form-control" name="fkEspecialidadID" placeholder="1" />
                    </div>
                    <div class="form-group">
                        <label>Fecha de Nacimiento</label>
                        <input type="date" class="form-control" name="FechaNacimiento" value="1999-01-01" />
                    </div>
                    <div class="form-group">
                        <label>Creado Por:</label>
                        <input type="text" class="form-control" name="CrBy" placeholder="123456" />
                    </div><hr />
                    <button type="submit" class="btn btn-primary">Registrar</button>
                    <a class="btn btn-warning" href="@Url.Action("Index", "Medico")">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>
