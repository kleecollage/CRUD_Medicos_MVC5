@model CRUD_de_medicos.Models.Medico

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header  text-white bg-dark">
                <h3 class="card-title">Editar Contacto</h3>
            </div>
            <div class="card-body text-white bg-secondary">
                <form action="@Url.Action("Editar", "Medico")" method="post">
                    <input type="hidden" class="form-control" name="" value="@Html.DisplayTextFor(m => m.pkMedicoID)" />
                    <div class="form-group">
                        <label>Nombre</label>
                        <input type="text" class="form-control" name="Nombre" value="@Html.DisplayTextFor(m => m.Nombre)" />
                    </div>
                    <div class="form-group">
                        <label>Apellido Paterno</label>
                        <input type="text" class="form-control" name="ApellidoPaterno" value="@Html.DisplayTextFor(m => m.ApellidoPaterno)" />
                    </div>
                    <div class="form-group">
                        <label>Apellido Materno</label>
                        <input type="text" class="form-control" name="ApellidoMaterno" value="@Html.DisplayTextFor(m => m.ApellidoMaterno)" />
                    </div>
                    <div class="form-group">
                        <label>Cedula Profesional</label>
                        <input type="text" class="form-control" name="CedulaProfesional" value="@Html.DisplayTextFor(m => m.CedulaProfesional)" />
                    </div>
                    <div class="form-group">
                        <label>Especialidad ID</label>
                        <input type="text" class="form-control" name="fkEspecialidadID" value="@Html.DisplayTextFor(m => m.fkEspecialidadID)" />
                    </div>
                    <div class="form-group">
                        <label>Fecha de Nacimiento</label>
                        <input type="date" class="form-control" name="FechaNacimiento" value="@Html.DisplayTextFor(m => m.FechaNacimiento)" />
                    </div>

                    <div class="form-group">
                        <label>Creado Por</label>
                        <input type="text" class="form-control" name="CrBy" value="@Html.DisplayTextFor(m => m.CrBy)" />
                    </div><hr />
                    <button type="submit" class="btn btn-primary">Actualizar</button>
                    <a class="btn btn-warning" href="@Url.Action("Index", "Medico")">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>

